    ViewBag.Title = "Kontaktirajte nas";
}
<!DOCTYPE html>
<html>
    <head>
    
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta charset="utf-8">

        <script>
            addEventListener("load", function () {
                setTimeout(hideURLbar, 0);
            }, false);

            function hideURLbar() {
                window.scrollTo(0, 1);
            }
        </script>

        <!-- css files -->
        <link href="~/Content/bootstrap-flatly.css" rel='stylesheet' type='text/css' /><!-- bootstrap css -->
        <link href="~/TemplateForHomePage/css/style.css" rel='stylesheet' type='text/css' /><!-- custom css -->
        <link href="~/TemplateForHomePage/css/font-awesome.min.css" rel="stylesheet"><!-- fontawesome css -->
        <!-- //css files -->

        <link href="~/TemplateForHomePage/css/css_slider.css" type="text/css" rel="stylesheet" media="all">

        <!-- google fonts -->
        <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900" rel="stylesheet">
        <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:200,200i,300,300i,400,400i,600,600i,700,700i,900,900i" rel="stylesheet">
        <!-- //google fonts -->

    </head>

    <body>
        <div class="inner-banner" id="home">
            <div class="inner-banner-overlay">
                <div class="container">

                </div>
            </div>
        </div>
        <!-- //banner -->
        <!-- page details -->
        <div class="breadcrumb-agile">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="~/Home/Index">Početna</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Kontaktirajte nas</li>
                </ol>
            </div>
        </div>
        <!-- //page details -->
        <!-- contact -->
        <section class="contact py-sm-5 py-4">
            <div class="container py-md-3">
                <h2 class="heading text-capitalize text-center mb-lg-5 mb-sm-4 mb-3"> Kontaktirajte nas</h2>
                <div class="contact-form">
                    <form action="#" method="post">
                        <div class="row main-w3layouts-sectns">
                            <div class="col-lg-3 col-md-6 w3-btm-spc form-text1">
                                <label> Ime:</label>
                                <input type="text" name="FirstName" placeholder="" required="">
                            </div>
                            <div class="col-lg-3 col-md-6 w3-btm-spc form-text2">
                                <label>Prezime:</label>
                                <input type="text" name="LastName" placeholder="" required="">
                            </div>
                            <div class="col-lg-3 col-md-6 w3-btm-spc form-text1">
                                <label>Email:</label>
                                <input type="email" name="email" placeholder="" required="">
                            </div>

                            <div class="col-lg-3 col-md-6 w3-btm-spc form-text2">
                                <label>Tema:</label>
                                <input type="text" name="subject" placeholder="" required="">
                            </div>
                        </div>
                        <div class="main-w3layouts-sectns ">
                            <div class="w3-btm-spc form-text2 p-0">
                                <textarea placeholder=""></textarea>
                            </div>
                        </div>
                        <button class="btn btn-primary"> Pošalji </button>
                    </form>
                </div>
            </div>
        </section>
        <!-- //contact -->

        <!-- map 
        <div class="map p-2">
            
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d23223.803428092506!2d21.89862895!3d43.3147738!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xd21caeea35f249d3!2sGym%20Town!5e0!3m2!1sen!2srs!4v1593040405337!5m2!1sen!2srs" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0" ></iframe>
        </div>
        <!-- map -->
        <a href="#home" class="move-top text-center"></a>
    </body>
</html>
